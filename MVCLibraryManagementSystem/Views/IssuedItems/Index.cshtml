@model List<MVCLibraryManagementSystem.Models.IssuedItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    <!--@Html.ActionLink("Issue Item", "")-->
    @Html.ActionLink("Issue Item" ,"Index", "Books")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().AccessionRecord.Item.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().IssueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().AccessionRecord.AccessionRecordId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Member)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().LateFeePerDay)
        </th>
     
        <th></th>
    </tr>

@foreach (var item in Model) {
    
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AccessionRecord.Item.Title)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.IssueDate)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Member)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.AccessionRecord.AccessionRecordId)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.LateFeePerDay)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IssuedItemId }) |
            @Html.ActionLink("Details", "Details", new { id=item.IssuedItemId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IssuedItemId })
            
        </td>
    </tr>
}

</table>
